<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_company_form_l10n_ru" model="ir.ui.view">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="company_l10n_ru_type" invisible="country_code !='RU'" />
            </field>
            <field name="vat" position="after">
                <field
                    name="kpp"
                    invisible="country_code != 'RU' and company_l10n_ru_type != 'individual_entrepreneur' and company_l10n_ru_type != 'natural_person'"
                />
            </field>
        </field>
    </record>
</odoo>
